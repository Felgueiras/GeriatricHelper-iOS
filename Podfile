source 'https://github.com/CocoaPods/Specs.git'

# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'
use_frameworks!

target 'GeriatricHelper' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for GeriatricHelper
    # Firebase
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Auth'
    pod ‘Firebase/Storage’
    pod 'Firebase/RemoteConfig'
    
    #
    pod 'ObjectMapper', '~> 2.2'
    
    # create messages like Android toasts
    pod 'SwiftMessages'
    # app intro
    pod ‘Onboard’
    # text field with search capabilities
    pod ‘SearchTextField’
    
    # charts that display patient's progress
    pod ‘Charts’
    # calendar with custom controls
    pod ‘FSCalendar’
    # guided tour of a CGA session
    pod 'Instructions', '~> 1.0.0'
    
end
